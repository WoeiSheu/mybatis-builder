<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <context id="test" targetRuntime="MyBatis3">
    <commentGenerator type="com.chuntung.plugin.mybatisbuilder.generator.CustomCommentGenerator">
      <property name="addDatabaseRemark" value="true"/>
    </commentGenerator>

    <jdbcConnection driverClass="org.h2.Driver"
        connectionURL="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1"
        userId=""
        password="">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="true" />
    </javaTypeResolver>

    <!--
    Support two variables which should be wrapped with ${}.
    PROJECT_DIR: the project base path.
    CURRENT_DIR: the configuration file path.
    -->
	<javaModelGenerator targetPackage="mybatisbuilder.example.model" targetProject="${PROJECT_DIR}/src/test/java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="sqlmap"  targetProject="${PROJECT_DIR}/src/test/resources">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="mybatisbuilder.example.mapper" targetProject="${PROJECT_DIR}/src/test/java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

    <table tableName="user" domainObjectName="gene.User"
           enableSelectByExample="true"
           enableUpdateByExample="false"
           enableCountByExample="false"
           enableDeleteByExample="false" />
  </context>
</generatorConfiguration>